name: Single Dataset Validation (All Tests)

on:
  workflow_dispatch:
    inputs:
      project:
        description: 'GCP Project ID (PRD)'
        required: false
        default: 'ncau-data-newsquery-prd'
        type: string
      project_nq:
        description: 'GCP Project ID (NQ/SIT)'
        required: false
        default: 'ncau-data-newsquery-sit'
        type: string
      dataset:
        description: 'Dataset name (PRD)'
        required: true
        type: string
        default: 'sdm_rcti'
      dataset_nq:
        description: 'Dataset name (NQ/SIT)'
        required: true
        type: string
        default: 'sdm_rcti_nq'
      startdate:
        description: 'Start date PRD (YYYY-MM-DD) - Leave empty for yesterday'
        required: false
        default: ''
        type: string
      enddate:
        description: 'End date PRD (YYYY-MM-DD) - Leave empty for yesterday'
        required: false
        default: ''
        type: string
      startdate_nq:
        description: 'Start date NQ/SIT (YYYY-MM-DD) - Leave empty for today'
        required: false
        default: ''
        type: string
      enddate_nq:
        description: 'End date NQ/SIT (YYYY-MM-DD) - Leave empty for today'
        required: false
        default: ''
        type: string

env:
  GCP_PROJECT_ID: ncau-data-newsquery-sit
  RESULTS_BUCKET: ncau-validation-results

jobs:
  validate-dataset:
    name: ${{ github.event.inputs.dataset }} - ${{ matrix.query_type }}
    runs-on: ubuntu-latest
    timeout-minutes: 90
    
    strategy:
      fail-fast: false
      matrix:
        query_type:
          - count
          - except_distinct_fullload
          - except_distinct_deltaload
          - schema_compare
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python 3.10
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'
          cache: 'pip'

      - name: Set up Java 17
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '17'

      - name: Install Python dependencies
        run: |
          pip install --upgrade pip
          pip install -r requirements.txt

      - name: Authenticate to Google Cloud
        uses: google-github-actions/auth@v2
        with:
          credentials_json: ${{ secrets.GCP_SA_KEY }}

      - name: Set up Cloud SDK
        uses: google-github-actions/setup-gcloud@v2

      - name: Update config with user inputs
        run: |
          python << 'EOF'
          import yaml
          
          with open('config/config.yaml', 'r') as f:
              config = yaml.safe_load(f)
          
          # Update projects from inputs
          def update_if_provided(key, value):
              if value and value.strip():
                  config[key] = value
              else:
                  # Set to empty string so config.py uses defaults
                  config[key] = ''
          
          update_if_provided('project', '${{ github.event.inputs.project }}')
          update_if_provided('project_nq', '${{ github.event.inputs.project_nq }}')
          
          # Update dataset from inputs (always provided, required field)
          config['dataset'] = '${{ github.event.inputs.dataset }}'
          config['dataset_nq'] = '${{ github.event.inputs.dataset_nq }}'
          
          # Update dates only if provided (non-empty)
          update_if_provided('startdate', '${{ github.event.inputs.startdate }}')
          update_if_provided('enddate', '${{ github.event.inputs.enddate }}')
          update_if_provided('startdate_nq', '${{ github.event.inputs.startdate_nq }}')
          update_if_provided('enddate_nq', '${{ github.event.inputs.enddate_nq }}')
          
          with open('config/config.yaml', 'w') as f:
              yaml.dump(config, f, default_flow_style=False)
          
          print("Updated config:")
          print(yaml.dump(config, default_flow_style=False))
          EOF

      - name: Run ${{ matrix.query_type }} tests
        id: run-tests
        run: |
          echo "Running ${{ matrix.query_type }} tests for ${{ github.event.inputs.dataset }}"
          
          java -Dtablename='*' \
               -jar karate-1.5.1.jar \
               --tags @regression \
               features/test_${{ matrix.query_type }}.feature
        continue-on-error: true

      - name: Check for test failures
        id: check-failures
        run: |
          if [ -d "output/failed_testcases" ] && [ "$(ls -A output/failed_testcases)" ]; then
            echo "has_failures=true" >> $GITHUB_OUTPUT
            FAILED_COUNT=$(ls -1 output/failed_testcases/*.sql 2>/dev/null | wc -l)
            echo "failed_count=$FAILED_COUNT" >> $GITHUB_OUTPUT
          else
            echo "has_failures=false" >> $GITHUB_OUTPUT
            echo "failed_count=0" >> $GITHUB_OUTPUT
          fi

      - name: Upload test results and logs
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: results-${{ github.event.inputs.dataset }}-${{ matrix.query_type }}-${{ github.run_number }}
          path: |
            output/
            target/karate-reports/
            logs/
          retention-days: 30

      - name: Fail job if tests failed
        if: steps.check-failures.outputs.has_failures == 'true'
        run: |
          echo "::error::${{ steps.check-failures.outputs.failed_count }} test(s) failed for ${{ matrix.query_type }}"
          exit 1

  summary:
    name: Test Summary
    runs-on: ubuntu-latest
    needs: validate-dataset
    if: always()
    
    steps:
      - name: Generate overall summary
        run: |
          echo "## Dataset Validation Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "- **Project (PRD):** ${{ github.event.inputs.project }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Project (NQ):** ${{ github.event.inputs.project_nq }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Dataset (PRD):** ${{ github.event.inputs.dataset }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Dataset (NQ):** ${{ github.event.inputs.dataset_nq }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Date Range (PRD):** ${{ github.event.inputs.startdate || 'yesterday (auto)' }} to ${{ github.event.inputs.enddate || 'yesterday (auto)' }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Date Range (NQ):** ${{ github.event.inputs.startdate_nq || 'today (auto)' }} to ${{ github.event.inputs.enddate_nq || 'today (auto)' }}" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "All 4 test types (count, except_distinct_fullload, except_distinct_deltaload, schema_compare) were executed." >> $GITHUB_STEP_SUMMARY