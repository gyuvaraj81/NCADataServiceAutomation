name: Run All Validation Tests

on:
  workflow_dispatch:
  schedule:
    - cron: '0 3 * * *'  # Daily at 3 AM UTC

jobs:
  test-matrix:
    name: ${{ matrix.dataset }} - ${{ matrix.query_type }}
    runs-on: ubuntu-latest
    timeout-minutes: 90
    
    strategy:
      fail-fast: false
      matrix:
        dataset:
          - sdm_rcti
          - sdm_optima
          - sdm_advertisingexternals
          - sdm_think
          - sdm_newsquery
        query_type:
          - count
          - except_distinct_fullload
          - except_distinct_deltaload
          - schema_compare
    
    steps:
      - uses: actions/checkout@v4
      
      - uses: actions/setup-python@v5
        with:
          python-version: '3.10'
          cache: 'pip'
      
      - uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '17'
      
      - name: Install dependencies
        run: pip install -r requirements.txt
      
      - uses: google-github-actions/auth@v2
        with:
          credentials_json: ${{ secrets.GCP_SA_KEY }}
      
      - name: Update config for ${{ matrix.dataset }}
        run: |
          python << 'EOF'
          import yaml
          
          with open('config/config.yaml', 'r') as f:
              config = yaml.safe_load(f)
          
          # Set dataset based on matrix
          dataset = '${{ matrix.dataset }}'
          config['dataset'] = dataset
          config['dataset_nq'] = dataset + '_nq' if not dataset.endswith('_nq') else dataset
          
          # Keep default projects
          config['project'] = 'ncau-data-newsquery-prd'
          config['project_nq'] = 'ncau-data-newsquery-sit'
          
          # Clear dates to use config.py defaults (yesterday for PRD, today for NQ)
          # config['startdate'] = ''
          # config['enddate'] = ''
          # config['startdate_nq'] = ''
          # config['enddate_nq'] = ''
          
          with open('config/config.yaml', 'w') as f:
              yaml.dump(config, f, default_flow_style=False)
          
          print("Updated config for ${{ matrix.dataset }}:")
          print(yaml.dump(config, default_flow_style=False))
          EOF
      
      - name: Run ${{ matrix.query_type }} tests
        run: |
          java -Dtablename='*' \
               -jar karate-1.5.1.jar \
               --tags @regression \
               features/test_${{ matrix.query_type }}.feature
        continue-on-error: true
      
      - name: Check for test failures
        id: check-failures
        run: |
          if [ -d "output/failed_testcases" ] && [ "$(ls -A output/failed_testcases)" ]; then
            echo "has_failures=true" >> $GITHUB_OUTPUT
            FAILED_COUNT=$(ls -1 output/failed_testcases/*.sql 2>/dev/null | wc -l)
            echo "failed_count=$FAILED_COUNT" >> $GITHUB_OUTPUT
          else
            echo "has_failures=false" >> $GITHUB_OUTPUT
            echo "failed_count=0" >> $GITHUB_OUTPUT
          fi
      
      - name: Upload test results and logs
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: results-${{ matrix.dataset }}-${{ matrix.query_type }}-${{ github.run_number }}
          path: |
            output/
            target/karate-reports/
            logs/
          retention-days: 30
      
      - name: Fail job if tests failed
        if: steps.check-failures.outputs.has_failures == 'true'
        run: |
          echo "::error::${{ steps.check-failures.outputs.failed_count }} test(s) failed for ${{ matrix.dataset }}"
          exit 1